.chat_main
  .main-header
    .main-header1
      .chat-name1
        = @group.name
      .chat-name2
        Member:
        - @group.users.each do |user|
          = user.name
    .main-header2
      = link_to edit_group_path(@group) do
        edit
  .messages
    = render @messages
    .main-message
      .js-massages
        masa
      .upper-message
        2020/7/4土
    .lower-message
      おはよう！
  .form
    .input-box
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'input-box__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'nput-box__image__file'
        = f.submit 'Send', class: 'submit-btn'




